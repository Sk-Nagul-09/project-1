pipeline {
    agent any

    stages {
        stage('cloning') {
            steps {
                echo 'cloning the code'
                git branch: 'main', url: 'https://github.com/Sk-Nagul-09/Project-1.git'
            }
        }
        
        stage('docker image') {
            steps {
                echo 'creating docker image'
                sh 'docker build -t basic_img:${BUILD_NUMBER} .'
            }
        }
        
        stage('docker run') {
            steps {
                echo 'Running the container'
                sh 'docker stop cont_${BUILD_NUMBER} || true'
                sh 'docker rm cont_${BUILD_NUMBER} || true'
                sh 'docker run -d --name cont_${BUILD_NUMBER} -p 808${BUILD_NUMBER}:808${BUILD_NUMBER} basic_img:${BUILD_NUMBER}'
            }
        }
    }
}
